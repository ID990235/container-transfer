.estimate-img {
  width: 100%;
  height: 1132rpx;
}

.estimate-img image {
  width: 100%;
  height: 100%;
}

.estimate_freight {
  padding: 0 40rpx 200rpx;
  overflow: hidden;
}

.title {
  color: rgba(16, 16, 16, 100);
  font-size: 36rpx;
  text-align: left;
  font-weight: 600;
}

.estimate-box {
  margin-top: 28rpx;
}

.channel-weight {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.channel {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  width: 308rpx;
  height: 172rpx;
  border-radius: 28rpx;
  background-color: #89c3f6;
  box-shadow: 0px 6rpx 14rpx 4rpx rgba(0, 0, 0, 0.4);
  font-family: Arial;
  border: 2rpx solid rgba(187, 187, 187, 100);
}

.weight {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  width: 308rpx;
  height: 172rpx;
  border-radius: 28rpx;
  background-color: #89ec9c;
  box-shadow: 0px 6rpx 14rpx 4rpx rgba(0, 0, 0, 0.4);
  font-family: Arial;
  border: 2rpx solid rgba(187, 187, 187, 100);
}

.weight .input {
  width: 200rpx;
  color: #001606;
  text-align: center;
}

.volume {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  margin: 28rpx auto 0;
  width: 100%;
  height: 172rpx;
  border-radius: 28rpx;
  background-color: #90aef6;
  box-shadow: 0px 6rpx 14rpx 4rpx rgba(0, 0, 0, 0.4);
  font-family: Arial;
  border: 2rpx solid rgba(187, 187, 187, 100);
}

.volume .input {
  text-align: center;
}

.freight {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  margin: 28rpx auto 0;
  width: 100%;
  height: 172rpx;
  border-radius: 28rpx;
  background-color: #0b73f7;
  color: white;
  box-shadow: 0px 6rpx 14rpx 4rpx rgba(0, 0, 0, 0.4);
  font-family: Arial;
  border: 2rpx solid rgba(187, 187, 187, 100);
}