.orderdetail-container {
  padding: 50rpx 28rpx 200rpx;
  overflow: hidden;
}

.order_box {
  width: 92vw;
  height: 390rpx;
  margin: 48rpx auto;
  padding: 20rpx 34rpx;
  box-sizing: border-box;
  opacity: 0.85;
  border-radius: 6rpx;
  box-shadow: 0px 4rpx 20rpx 0px rgba(0, 0, 0, 0.4);
  border: 2rpx solid rgba(255, 255, 255, 100);
}

.tip {
  color: #EC0606;
  font-size: 24rpx;
  font-weight: 600;
}

.tip-icon {
  margin-right: 10rpx;
}

.info-form {
  display: flex;
  flex-direction: column;
  padding: 0 20rpx;
}

.order-input {
  display: flex;
  justify-content: center;
  align-items: center;
  color: #73c97c;
  font-weight: 600;
  margin: 10rpx 0;
}

.star {
  color: red;
  font-size: 50rpx;
  margin-right: 10rpx;
  font-weight: 0;
}

.input {
  width: 400rpx;
  height: 50rpx;
  margin-left: 15rpx;
  padding-left: 20rpx;
  box-sizing: border-box;
  border-radius: 20rpx;
  color: #888888;
  font-size: 22rpx;
  border: 2rpx solid rgba(187, 187, 187, 100);
}

.note {
  width: 100%;
  height: 200rpx;
  border-radius: 14rpx;
  padding: 10rpx;
  margin-top: 10rpx;
  color: #888888;
  font-size: 25rpx;
  border: 2rpx solid rgba(187, 187, 187, 100);
  box-sizing: border-box;
}