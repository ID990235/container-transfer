.header {
  display: flex;
  align-items: center;
  width: 100%;
  height: 280rpx;
  background-color: #4c168e;
  color: rgba(255, 255, 255, 100);
}

.userinfo {
  display: flex;
  justify-content: space-around;
  align-items: center;
  width: 60vw;
  height: 15vh;
}

.portrait {
  width: 140rpx;
  height: 140rpx;
  border-radius: 80rpx;
  overflow: hidden;
}

.portrait image {
  width: 100%;
  height: 100%;
}

.textinfo {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  height: 100%;
}

.name {
  font-size: 40rpx;
}

.coding {
  font-size: 26rpx;
}

.main {
  padding: 40rpx 0;
  overflow: hidden;
}

.myorder {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 95vw;
  height: 264rpx;
  box-sizing: border-box;
  padding: 25rpx 25rpx 50rpx;
  margin: 0 auto;
  border-radius: 20rpx 20rpx 20rpx 20rpx;
  text-align: center;
  box-shadow: 0px 4rpx 12rpx 0px rgba(0, 0, 0, 0.4);
  border: 2rpx solid rgba(187, 187, 187, 100);
}

.myorder .order-top {
  display: flex;
  justify-content: space-between;
}

.allorder {
  display: flex;
  align-items: center;
  width: 145rpx;
  text-align: left;
  font-size: 28rpx;
  color: #999999;
}

.allorder image {
  width: 25%;
  height: 80%;
}

.order-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx 0;
}

.icontext {
  font-size: 24rpx;
}

.other {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 95vw;
  height: 602rpx;
  box-sizing: border-box;
  margin: 36rpx auto 0;
  padding: 25rpx 30rpx;
  border-radius: 22rpx 22rpx 22rpx 22rpx;
  background-color: rgba(255, 255, 255, 100);
  box-shadow: 0px 4rpx 12rpx 0px rgba(0, 0, 0, 0.4);
  border: 2rpx solid rgba(187, 187, 187, 100);
}

.other-item {
  display: flex;
  justify-content: space-between;
  height: 60rpx;
  border-bottom: 6rpx solid #F1F1F1;
}

.arrow-img {
  width: 42rpx;
  height: 42rpx;
}

.arrow-img image {
  width: 100%;
  height: 100%;
}