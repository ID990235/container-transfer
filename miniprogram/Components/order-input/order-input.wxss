.orderinput_box {
  display: flex;
  flex-direction: column;
  padding: 0 20rpx;
}

.input-box {
  position: relative;
  z-index: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 15rpx 0;
}

.input-list {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  width: 100%;
  height: 60rpx;
  margin-left: 15rpx;
  padding: 0 20rpx 0;
  box-sizing: border-box;
  border-radius: 20rpx;
  color: #888888;
  font-size: 28rpx;
  border: 2rpx solid rgba(187, 187, 187, 100);
}

/* .input-list input {
  width: 80%;
} */

.replenish {
  align-self: flex-end;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 222rpx;
  height: 52rpx;
  border-radius: 22rpx;
  color: rgba(64, 184, 80, 100);
  font-size: 24rpx;
  box-shadow: 0px 4rpx 10rpx 0px rgba(0, 0, 0, 0.4);
  font-family: Arial;
  border: 2rpx solid rgba(64, 184, 80, 100);
}

.add {
  font-size: 30rpx;
  width: 30rpx;
}

.delete {
  position: absolute;
  right: 10rpx;
  font-size: 40rpx;
  z-index: 100;
}

.weight {
  position: absolute;
  font-size: 40rpx;
  z-index: 100;
  color: #E7691D;
  background-color: #FDE5D2;
  font-size: 20rpx;
  border: 2prx solid #FDE5D2;
}

.disabled {
  z-index: -1
}

.purple {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 70rpx;
  height: 32rpx;
  border-radius: 8rpx;
  color: white;
  background-color: rgba(78, 20, 140, 0.6);
  font-size: 20rpx;
  border: 2prx solid rgba(255, 255, 255, 79);
}

.orange {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 70rpx;
  height: 32rpx;
  border-radius: 8rpx;
  color: #E7691D;
  background-color: #FDE5D2;
  font-size: 20rpx;
  border: 2prx solid #FDE5D2;
}