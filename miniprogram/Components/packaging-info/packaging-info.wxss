.packaging-info_box {
  width: 92vw;
  height: auto;
  margin: 30rpx auto;
  padding: 20rpx 28rpx 20rpx;
  box-sizing: border-box;
  opacity: 0.85;
  box-shadow: 0px 2px 10px 0px rgba(0, 0, 0, 0.4);
  border: 2rpx solid rgba(255, 255, 255, 100);
}

.text-item {
  font-size: 28rpx;
  margin: 25rpx 0;
}

.orange {
  color: #e87957;
}

.imgs-box {
  display: flex;
  flex-wrap: wrap;
}

.imgs {
  width: 186rpx;
  height: 164rpx;
  margin: 10rpx 20rpx 0 0;
}

.imgs image {
  width: 100%;
  height: 100%;
}

.bill-box {
  display: flex;
  flex-direction: column;
  width: 100%;
}

.bill-item {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  width: 100%;
  height: 240rpx;
  padding: 20rpx;
  margin: 15rpx 0;
  box-sizing: border-box;
  opacity: 0.85;
  border-radius: 6rpx;
  font-family: Arial;
  border: 2rpx solid rgba(0, 0, 0, 0.3);
}

.left {
  width: 192rpx;
  height: 186rpx;
}

.left image {
  width: 100%;
  height: 100%;
}

.right {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
  height: 100%;
}

.title {
  color: #000000;
  font-weight: 600;
}

.info {
  font-size: 24rpx;
  color: #acadac;
}