.order-card_box {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 20rpx 20rpx;
  box-sizing: border-box;
  width: 694rpx;
  height: 326rpx;
  margin: 25rpx auto;
  box-shadow: 0px 4rpx 20rpx 0px rgba(0, 0, 0, 0.4);
  font-family: Arial;
  border: 2rpx solid rgba(255, 255, 255, 100);
}

.orderNum {
  font-size: 28rpx;
  font-family: PingFangSC-regular;
}

.copy {
  margin-left: 15rpx;
  color: #63c58b;
}

.status-info {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.bts {
  display: flex;
  justify-content: flex-end;
}

.bts button {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 150rpx;
  height: 60rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-family: Microsoft Yahei;
  margin: 0 0 0 20rpx;
  padding: 0;
}

.red {
  background-color: rgba(255, 255, 255, 100);
  color: rgba(236, 6, 6, 100);
  border: 2rpx solid rgba(236, 6, 6, 100);
}

.detail {
  background-color: #73c97c;
  color: white;
  border: 2rpx solid #73c97c;
}

.green {
  color: #6bcd7e;
  border: 2rpx solid #6bcd7e;
}

.fj {
  width: 64rpx;
  height: 64rpx;
}

.fj image {
  width: 100%;
  height: 100%;
}

.status {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.status-text {
  color: #73c97c;
  font-size: 26rpx;
}