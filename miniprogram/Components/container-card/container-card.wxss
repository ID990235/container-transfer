.container_box {
  position: relative;
  display: flex;
  width: 100%;
  margin-bottom: 20rpx;
}

.left {
  flex: 2;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  width: 268rpx;
  height: 200rpx;
}

.left image {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.money {
  display: flex;
  align-items: flex-end;
  width: auto;
  height: 134rpx;
  color: white;
  font-size: 96rpx;
  font-family: PingFangSC-regular;
}

.money text {
  width: 20px;
  height: 28px;
  color: white;
  font-size: 40rpx;
  margin-left: 10rpx;
  margin-bottom: 15rpx;
}

.threshold {
  color: white;
}

.right {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  padding-left: 20rpx;
  box-sizing: border-box;
}

.title {
  color: rgba(90, 90, 90, 100);
  font-size: 36rpx;
  margin-top: 20rpx;
}

.date {
  font-size: 28rpx;
  color: rgba(191, 191, 191, 100);
  margin-bottom: 20rpx;
}

.upper-right {
  position: absolute;
  right: 0;
  width: 126rpx;
  height: 126rpx;
}

.upper-right image {
  width: 100%;
  height: 100%;
}

.upper-right text {
  position: absolute;
  top: 25%;
  left: 35%;
  transform: translate(-50%, -50%);
  transform: rotate(45deg);
  color: white;
  font-size: 24rpx;
}

.shouzhong {
  font-size: 72rpx;
}

.other {
  position: absolute;
  width: 160rpx;
  height: 160rpx;
  top: 50%;
  transform: translateY(-50%);
  right: 70rpx;
}

.other image {
  width: 100%;
  height: 100%;
}